<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity" android:id="@+id/interaction">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pattern01"
            android:scaleType="fitCenter"
            android:baselineAlignBottom="false"
            android:src="@mipmap/main_bg"
            android:contentDescription="@string/logo"
            android:background="#00FFFFFF"
            app:srcCompat="@mipmap/main_bg"/>
    <ImageView
            android:layout_width="141dp"
            android:layout_height="151dp"
            android:id="@+id/nedbankLogo"
            android:scaleType="fitCenter"
            android:baselineAlignBottom="false"
            android:src="@mipmap/logoxxhdpi"
            android:contentDescription="@string/logo"
            android:background="#00FFFFFF"
            android:layout_gravity="center|center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="175dp"
            android:layout_height="85dp"
            android:id="@+id/btnStart"
            android:background="@mipmap/start_buttonxxhdpi"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="50dp"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"/>

</RelativeLayout>